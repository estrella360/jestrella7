<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jestrella7.Login" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login" HorizontalOptions="Center" FontSize="24" />
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contrasena"/>
            <Button x:Name="btnIniciar" Text="INICIAR SESSION" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="REGISTRAR" Clicked="btnRegistrar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>